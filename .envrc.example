# Load nvm if available and use the specified Node version
if [ -s "$HOME/.nvm/nvm.sh" ]; then
  source "$HOME/.nvm/nvm.sh"
  nvm use
fi

# Fix for Scaffolder plugin
export NODE_OPTIONS="${NODE_OPTIONS:-} --no-node-snapshot"

# GitHub App Configuration (required)
export AUTH_GITHUB_CLIENT_ID=        # GitHub App Client ID
export AUTH_GITHUB_CLIENT_SECRET=    # GitHub App Client Secret  
export AUTH_GITHUB_APP_ID=           # GitHub App ID
export AUTH_GITHUB_APP_PRIVATE_KEY_FILE=  # Path to .pem file
export AUTH_GITHUB_APP_INSTALLATION_ID=   # Installation ID after installing app

# Postgres Configuration (optional - uses SQLite by default)
# export POSTGRES_HOST=localhost
# export POSTGRES_PORT=5432
# export POSTGRES_USER=postgres
# export POSTGRES_PASSWORD=

# Backstage configuration
export APP_CONFIG_app_title='Open Service Portal'

